<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class: "form-horizontal"}) do |f| %>
  <%= devise_error_messages! %>

  <div class="control-group">
    <%= f.label "Name", class: "control-label" %>
    <div class="controls">
      <%= text_field_tag :name, nil, class: "required", minlength: "2" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label "Url", class: "control-label" %>
    <div class="controls">
      <%= text_field_tag :url, nil, class: "required url" %>
    </div>
  </div>
  
  <div class="control-group">
    <%= f.label "Your e-mail", class: "control-label" %>
    <div class="controls">
      <%= f.email_field :email, class: "required e-mail" %>
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
      <%= f.submit("Start now", class: "btn btn-primary btn-large") %>
    </div>
  </div>

<% end %>

