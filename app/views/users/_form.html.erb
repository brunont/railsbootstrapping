<%= form_for(@user, html: {class: "form-horizontal", id: "my_form"}) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name, class: "control-label" %>
    <div class="controls">
      <%= f.text_field :name, class: "required", minlength: "2" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :email, class: "control-label" %>
    <div class="controls">
      <%= f.email_field :email, class: "required email" %>
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
      <%= f.submit(nil, class:"btn btn-primary btn-large") %> or <%= link_to 'Return', users_path, class: "text-error" %>
    </div>
  </div>
  
<% end %>
