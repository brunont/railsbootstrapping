<%= content_for :title do %>Users<% end %>

<h1>Users</h1>

<table class="table table-hover">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= link_to '<i class="icon-zoom-in"></i>'.html_safe, user %></td>
    <td><%= link_to '<i class="icon-edit"></i>'.html_safe, edit_user_path(user) %></td>
    <td><%= link_to '<i class="icon-trash"></i>'.html_safe, user, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br/><br/>

<%= link_to 'New user', new_user_path, class: "btn btn-primary btn-large" %>